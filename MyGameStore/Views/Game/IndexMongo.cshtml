@model MyGameStore.Models.GamesgenreViewModelMongo

@{
    ViewData["Title"] = "index";
}

<h1>My Game Store</h1>

<h3>My Games</h3>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form asp-controller="Game" asp-action="Index" method="get">
    <p>
        <select asp-for="GameGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>

        Title: <input type="text" asp-for="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(x => x.Games[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.Games[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.Games[0].Publisher)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.Games[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.Games[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.Games[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.Games[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.Games[0].UnitsSold)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var game in Model.Games)
        {
            <tr>
                <td>@Html.DisplayFor(x => game.Title)</td>
                <td>@Html.DisplayFor(x => game.Description)</td>
                <td>@Html.DisplayFor(x => game.Publisher)</td>
                <td>@Html.DisplayFor(x => game.Rating)</td>
                <td>@Html.DisplayFor(x => game.ReleaseDate)</td>
                <td>@Html.DisplayFor(x => game.Genre)</td>
                <td>@Html.DisplayFor(x => game.Price)</td>
                <td>@Html.DisplayFor(x => game.UnitsSold)</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = game.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = game.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = game.Id })

                </td>
            </tr>
        }
    </tbody>

</table>


